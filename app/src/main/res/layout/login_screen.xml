<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tea2">
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/Beast"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/beast"/>
        <TextView
            android:id="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Beast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beast Coffee"
            android:fontFamily="cursive"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_margin="@dimen/_40sdp"
            android:background="@drawable/border_backgroundlogin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/_20sdp"
                android:text="Login Now"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_20sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/border_account">

                <EditText
                    android:maxLength="16"
                    android:id="@+id/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Username"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"/>

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/border_account">

                <EditText
                    android:maxLength="18"
                    android:id="@+id/Password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Password"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/ivLO"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lock_open" />
                <ImageView
                    android:id="@+id/ivL"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lock"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_8sdp"
                android:id="@+id/Report"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/border_image"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/Login"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/next" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>